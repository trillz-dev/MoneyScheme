<!-- Header -->
<%- include('../includes/header-dark.ejs') %>

<section class="sign-in-section">
<div class="sign-in-container">
  <div class="sign-in-header">
    <h1>Sign in</h1>
  </div>

  <form method="POST" action="" class="sign-in-form">
    <div class="sign-in-form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="login-email"
        name="username"
        placeholder="Enter email address"
      />
      <p class="hidden error-msg" id="login-emailWarning">
        Email cannot be empty!
      </p>
    </div>

    <div class="sign-in-form-group">
      <label for="password">Password</label>
      <input type="password" id="login-password" placeholder="******" name="password" />
      <p class="hidden error-msg" id="login-passwordWarning">
        Password cannot be empty!
      </p>
    </div>

    <div class="sign-in-form-group">
      <button type="submit" class="btn btn-primary" id="login-btn">
        Login
      </button>
    </div>
  </form>

  <div class="sign-in-footer">
    <p>
      Don't have an account? <a href="./login">Create one now</a>
    </p>
  </div>
</div>
</section>

<hr />

<%- include('../includes/footer.ejs') %>

