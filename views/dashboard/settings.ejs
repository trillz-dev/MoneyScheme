                <div class="form-group">
                  <label for="email">Email</label>
                  <input
                    type="text"
                    name="email"
                    id=""
                    placeholder="james@gmail.com"
                    class="profile-email"
                  />
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input
                    type="password"
                    name=""
                    id=""
                    class="profile-password"
                  />
